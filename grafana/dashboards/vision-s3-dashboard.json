{
  "dashboard": {
    "id": null,
    "title": "Vision & S3 Storage Dashboard",
    "tags": ["telegram-assistant", "vision", "s3", "storage"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "S3 Storage Usage (15 GB Limit)",
        "type": "stat",
        "targets": [
          {
            "expr": "storage_bucket_usage_gb",
            "legendFormat": "Used: {{tenant_id}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decbytes",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 12},
                {"color": "red", "value": 14}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Vision Analysis Requests",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(vision_analysis_requests_total[5m])",
            "legendFormat": "{{status}} - {{provider}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Vision Tokens Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(vision_tokens_used_total[5m])",
            "legendFormat": "{{provider}} - {{tenant_id}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "S3 Operations Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(s3_upload_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 Upload Duration"
          },
          {
            "expr": "histogram_quantile(0.50, rate(s3_upload_duration_seconds_bucket[5m]))",
            "legendFormat": "P50 Upload Duration"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Storage Quota Violations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(storage_quota_violations_total[5m])",
            "legendFormat": "{{tenant_id}} - {{reason}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "DLQ Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(events_dlq_total[5m])",
            "legendFormat": "{{base_event}} - {{error_code}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
